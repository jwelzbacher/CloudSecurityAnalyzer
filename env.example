# CS Kit Environment Variables Example
# Copy this file to .env and fill in your credentials

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_SESSION_TOKEN=your_aws_session_token_if_using_temporary_credentials
AWS_DEFAULT_REGION=us-east-1

# GCP Configuration
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/gcp-service-account-key.json
GOOGLE_CLOUD_PROJECT=your-gcp-project-id

# Azure Configuration
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_TENANT_ID=your_azure_tenant_id

# CS Kit Configuration (Optional)
CS_KIT_LOG_LEVEL=INFO
CS_KIT_ARTIFACTS_DIR=./artifacts
CS_KIT_REPORTS_DIR=./reports
CS_KIT_COMPANY_NAME="Your Company Name"

# Development Settings (Optional)
PYTHONPATH=/app
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1